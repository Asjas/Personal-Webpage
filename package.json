{
  "name": "remix-starter-express",
  "version": "1.0.0",
  "scripts": {
    "prod": "NODE_ENV=production node server.js",
    "build": "NODE_ENV=production npm run css:build && NODE_ENV=production remix build && tsc -b",
    "start": "NODE_ENV=development concurrently \"npm run css:watch\" \"remix run\" \"tsc -b -w\" \"nodemon --ignore app server.js\"",
    "css:watch": "postcss styles --base styles --dir app/ -w",
    "css:build": "postcss styles --base styles --dir app/ --env production"
  },
  "dependencies": {
    "@remix-run/cli": "0.6.0",
    "@remix-run/express": "0.6.0",
    "@remix-run/loader": "0.6.0",
    "@remix-run/react": "0.6.0",
    "express": "4.17.1",
    "morgan": "1.10.0",
    "postcss-cli": "8.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0",
    "tailwindcss": "1.9.6"
  },
  "devDependencies": {
    "@types/react": "16.9.54",
    "@types/react-dom": "16.9.9",
    "concurrently": "5.3.0",
    "nodemon": "2.0.6",
    "typescript": "4.0.5"
  }
}
